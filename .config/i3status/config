general {
    interval 		= 1
    colors 			= true
    color_good = "#81a1c1" # Light green
    color_degraded = "#fafe7c" # Light yellow
    color_bad = "#ff7770" # Light red
}

order += "cpu_usage 0"
order += "memory"
order += "cpu_temperature 0"
order += "volume master"
order += "wireless wlan0"
#order += "ethernet enp0s25"
order += "battery all"
order += "tztime local"

wireless wlan0 {
    format_up = "   %essid %quality %ip"
    format_down = ""
}

#ethernet enp0s25 {
#    #if you use %speed, i3status requires root privileges
#    format_up = "%ip (%speed)"
#    format_down = ""
#}

battery all {
    format = "%status  %percentage"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 11
    threshold_type = percentage
    hide_seconds = true
    status_chr = " "
    status_bat = " "
    status_unk = " "
    status_full = " "
}

tztime local {
    format = " %A %e %B   %H:%M"
}

cpu_usage {
    format = "  %usage"
}

cpu_temperature 0 {
	format = " %degrees°C"
}

memory {
    format = "  %used"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

volume master {
    format = "%volume "
    format_muted = ""
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
